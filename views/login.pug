extends layout

block content
    .login-box
        .login-box-body
            p.login-box-msg Login
            form(method="POST")
                .form-group.has-feedback
                    input.form-control(type="email" name="email" placeholder="Email" required)
                    span.glyphicon.glyphicon-envelope.form-control-feedback
                .form-group.has-feedback
                    input.form-control(type="password" name="password" placeholder="Password" required)
                    span.glyphicon.glyphicon-lock.form-control-feedback
                .row
                    .col-xs-4.col-xs-offset-8
                        button.btn.btn-primary.btn-block.btn-flat(type="submit") Login
            
            p.text-center - OR -
            a.btn.btn-block.btn-default.btn-flat(href="/app/register") Register new account
            include includes/social_login
            a.text-center(href="/app/recover") Recover account