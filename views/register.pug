extends layout
    
block content
    .register-box
        .register-box-body
            p.login-box-msg Register
            form(method="POST")
                .form-group.has-feedback
                    input.form-control(type="text" name="name" placeholder="Full name")
                    span.glyphicon.glyphicon-user.form-control-feedback
                .form-group.has-feedback
                    input.form-control(type="email" name="email" placeholder="Email" required)
                    span.glyphicon.glyphicon-envelope.form-control-feedback
                .form-group.has-feedback
                    input.form-control(type="password" name="password" placeholder="Password" required)
                    span.glyphicon.glyphicon-lock.form-control-feedback
                .form-group.has-feedback
                    input.form-control(type="password" name="password-confirm" placeholder="Confirm password" required)
                    span.glyphicon.glyphicon-log-in.form-control-feedback
                .row
                    .col-xs-4.col-xs-offset-8
                        button.btn.btn-primary.btn-block.btn-flat(type="submit") Register
                