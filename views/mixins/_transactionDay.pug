mixin transactionDay(day)
    .box.box-success.box-transactions-day
        - const currencySymbol = wallet.currency ? h.currencies[wallet.currency].symbol : ''
        .box-header.with-border
            h3.box-title= h.moment(day.date).format('DD MMM [-] dddd')
            - dayTotal = day.transactions.reduce((res, el) => res += el.amount, 0);
            h3.box-title.pull-right #{dayTotal} #{currencySymbol}
        .box-body
            for transaction, index in day.transactions
                div.t-body(id=transaction._id)
                    if transaction.amount >= 0
                        span.t-amount.t-income #{transaction.amount} #{currencySymbol}
                    else
                        span.t-amount.t-outcome #{transaction.amount} #{currencySymbol}
                    div.pull-right.text-right
                        strong #{transaction.category}
                    div
                        span #{transaction.description}
                    div
                        small.text-muted #{transaction.location['address']}
                    if index < day.transactions.length - 1
                        hr